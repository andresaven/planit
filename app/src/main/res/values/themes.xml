<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Planit" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
    </style>
    <style name="Theme.Planit" parent="Base.Theme.Planit" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/onPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
    </style>

    <style name="MyAppBarTitleText" parent="Base.Theme.Planit">
        <item name="fontFamily">@font/caveat</item>
        <item name="android:textSize">32dp</item>
        <item name="marginHorizontal">5dp</item>
        <item name="itemIconTint">@color/onPrimary</item>
    </style>
    <style name="ThemeOverlay.Planit.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>